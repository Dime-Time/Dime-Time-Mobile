<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Financial data should never be backed up to cloud -->
        <exclude domain="root"/>
        <exclude domain="database"/>
        <exclude domain="sharedpref"/>
        <exclude domain="external"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow minimal data transfer for device setup -->
        <include domain="root" path="app_preferences/"/>
        <exclude domain="database"/>
        <exclude domain="sharedpref" path="financial_data/"/>
    </device-transfer>
</data-extraction-rules>